<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.uottawa.scottfulton.choremanager.SelectIcon">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="fill_parent"
            android:layout_height="27dp"
            android:text="Select your icon:" />

        <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:columnCount="3"
            android:rowCount="2">

            <ImageView
                android:id="@+id/bathroomImg"
                android:layout_width="125dp"
                android:layout_height="100dp"
                android:layout_column="2"
                android:layout_columnSpan="1"
                android:layout_row="0"
                android:layout_rowSpan="1"
                android:onClick="SetIcon"
                app:srcCompat="@drawable/bathroom" />

            <ImageView
                android:id="@+id/bedroomImg"
                android:layout_width="125dp"
                android:layout_height="100dp"
                android:layout_column="0"
                android:layout_columnSpan="1"
                android:layout_row="0"
                android:layout_rowSpan="1"
                android:onClick="SetIcon"
                app:srcCompat="@drawable/bedroom" />

            <ImageView
                android:id="@+id/kitchenImg"
                android:layout_width="125dp"
                android:layout_height="100dp"
                android:layout_column="1"
                android:layout_columnSpan="1"
                android:layout_row="0"
                android:layout_rowSpan="1"
                android:onClick="SetIcon"
                app:srcCompat="@drawable/kitchen" />

            <ImageView
                android:id="@+id/outdoorImg"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_column="0"
                android:layout_columnSpan="1"
                android:layout_row="1"
                android:layout_rowSpan="1"
                android:onClick="SetIcon"
                app:srcCompat="@drawable/outdoor" />

            <ImageView
                android:id="@+id/fullhouseImg"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_column="1"
                android:layout_columnSpan="1"
                android:layout_row="1"
                android:layout_rowSpan="1"
                android:onClick="SetIcon"
                app:srcCompat="@drawable/fullhouse" />

            <ImageView
                android:id="@+id/starImg"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_column="2"
                android:layout_row="1"
                android:onClick="SetIcon"
                app:srcCompat="@android:drawable/btn_star_big_on" />

        </GridLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
